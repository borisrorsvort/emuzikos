<div id="users_chart" style="width: 380px; height: 300px;">
</div>

<script type="text/javascript">
  $(function () {
    new Highcharts.Chart({
      chart: {
         renderTo: 'users_chart',
         defaultSeriesType: 'column' },
      colors: [
        '#4572A7',
        '#AA4643',
        '#89A54E'
      ],
      title: { text: 'Users per Day' },
      xAxis: { type: 'datetime' },
      yAxis: {
        title: { text: 'Users'}
      },
      tooltip: {
        formatter: function () {
          return Highcharts.dateFormat("%B %e %Y", this.x) + ': ' + Highcharts.numberFormat(this.y, 0) + " users"
        }
      },
      plotOptions: {
        column: {
          dataLabels: {
            enabled: true
          },
          enableMouseTracking: true,
          pointPadding: 0.1,
          groupPadding: 0,
          borderWidth: 0, 
          shadow: false
        }
      },
      series: [
       {
         name: "Total Users",
         pointInterval: <%= 1.day * 1000 %>,
         pointStart: <%= 2.weeks.ago.at_midnight.to_i * 1000 %>,
         data: <%= (2.weeks.ago.to_date..Date.today).map { |date| User.total_on(date).to_f}.inspect %>
       }]
    });
  });
</script>