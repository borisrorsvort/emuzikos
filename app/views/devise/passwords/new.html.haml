- title t(:'.title'), false

#user_forms.centered
  %header
    %h1= t(:'.title')
    
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      = f.email_field :email
    .field
      = f.submit t(:'buttons.send_password'), :class => "button submit"
    
  = render :partial => "devise/shared/links"
