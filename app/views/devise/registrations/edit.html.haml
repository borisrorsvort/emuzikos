- title t(:'.title')
- description 'Edit your account, notification settings on Emuzikos.com and start to search for wanted bands and musicians'
- set_meta_tags :canonical => request.url
- headline t(:'.title')

- if @user == current_user
  - content_for :sub_nav do
    %ul#sub_sections
      %li
        = link_to t(:'menu.profile.edit'), edit_user_path(current_user)
      %li
        = link_to t(:'menu.profile.public'),  user_path(current_user)
      %li
        = link_to t(:'menu.profile.account'), edit_user_registration_path(current_user), :class => "current"
      %li
        = link_to t(:'menu.profile.authentications'), services_path

    .clear

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  = f.input :username, :label => t(:'activerecord.attributes.user.username')
  = f.input :email, :label => t(:'activerecord.attributes.user.email')
  = f.input :password, :label => t(:'activerecord.attributes.user.password'), :hint => t(:'common.leave_blank')
  = f.input :password_confirmation, :label => t(:'activerecord.attributes.user.password_confirmation')
  = f.input :current_password, :label => t(:'activerecord.attributes.user.current_password')
  .form-actions
    = f.submit t(:'buttons.update'), :class => "btn btn-primary"

