- set_title t(:'.title')
- description 'Sign up on Emuzikos.com and start to search for wanted bands and musicians'
- canonical request.url
= everywhere_js do
  Layout.init("right-panel-layout public page-signup");


.centered-box.box
  %header.box-header
    %h1= t(:'.title')
    %p.muted= t(:'devise.registrations.new.newsletter_agreement').html_safe
  .box-body
    = link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-large" do
      %i.icon-facebook
      = t(:"devise.signup_with", :provider => "Facebook")
    %hr.clearfix
    .centered-box--form
      = render("signup_form", locals: {resource: resource})
= render  "devise/shared/links"

= everywhere_js do
  App.initLocationAutocomplete();

