- title t(:'.title')
- description t(:'.description')
- set_meta_tags :canonical => request.url

.row-fluid
  .spacer.span3
    &nbsp;
  .boxy_forms.span6
    %header.page-header
      %h1= t(:'.title')

    .field
      %p
        = link_to t(:"devise.signup_with", :provider => "Facebook"), user_omniauth_authorize_path(:facebook), :class => "btn-auth btn-facebook"
      %p
        = link_to t(:"devise.signup_with", :provider => "Twitter"), user_omniauth_authorize_path(:twitter), :class => "btn-auth btn-twitter"
    %hr.clearfix
    %a.normal_login_trigger{"data-target" => ".normal_login", "data-toggle" => "collapse"}= t(:"devise.use_the_normal_form")
    .normal_login.collapse.in
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
        //= devise_error_messages!
        = f.input :email, :label => t(:'activerecord.attributes.user.email')
        = f.input :password, :label => t(:'activerecord.attributes.user.password')

        - if devise_mapping.rememberable?
          = f.input :remember_me, :as => :boolean, :label => t(:'.remember_me')
        .form-actions
          = f.submit(t(:'buttons.login'), :type => "submit", :class => "btn btn-primary")
    %hr.clearfix
    #remote.services_login
      .shared_links
        = render "devise/shared/links"

    .clear
  .spacer.span3
    &nbsp;