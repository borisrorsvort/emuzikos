- title t(:'.title')
- description t(:'.description')
- set_meta_tags :canonical => request.url

.boxy_forms.span6.offset3
  %header.page-header
    %h1= t(:'.title')

  .field
    %p
      %a.btn-auth.btn-facebook{ :href => "/auth/facebook"}
        = t(:"devise.login_with", :provider => "Facebook")
    %p
      %a.btn-auth.btn-twitter{ :href => "/auth/twitter"}
        = t(:"devise.login_with", :provider => "Twitter")
  %hr.clearfix
  %a.normal_login_trigger{"data-target" => ".normal_login", "data-toggle" => "collapse"}= t(:"devise.use_the_normal_form")
  .normal_login.collapse.in
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
      //= devise_error_messages!
      = f.input :email, :label => t(:'activerecord.attributes.user.email')
      = f.input :password, :label => t(:'activerecord.attributes.user.password')

      - if devise_mapping.rememberable?
        = f.input :remember_me, :as => :boolean, :label => t(:'.remember_me')
      .form-actions
        = f.submit(t(:'buttons.login'), :type => "submit", :class => "btn btn-primary")
  %hr.clearfix
  #remote.services_login
    .shared_links
      = render "devise/shared/links"

  .clear