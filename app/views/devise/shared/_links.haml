- if controller_name != 'sessions'
  .field
    = t(:'.have_account_already')
    %br
    = link_to t(:'menu.login'), new_session_path(resource_name)
- if devise_mapping.registerable? && controller_name != 'registrations'
  .field
    = t(:'.dont_have_account_yet')
    %br
    = link_to t(:'menu.signup'), new_registration_path(resource_name)
- if devise_mapping.recoverable? && controller_name != 'passwords'
  .field
    =t(:'.forgot_password')
    %br
    = link_to t(:'.go_to_recovery_page'), new_password_path(resource_name)

