#footer.light
  .inner_footer
    .left_links
      = link_to t(:'common.home'), root_path, :rel => "nofollow"
      = link_to t(:'menu.terms'), terms_path, :rel => "nofollow"
      = link_to t(:'menu.privacy'), privacy_path, :rel => "nofollow"
      = link_to t(:'menu.testimonials'), testimonials_path, :rel => "nofollow"

      - unless current_user
        = link_to t(:'menu.signup'), new_user_registration_path, :rel => "nofollow"
        = link_to t(:'menu.login'), new_user_session_path, :rel => "nofollow"

    .copyright
      Emuzikos #{Time.now.year} | #{ t(:'common.created_by')} #{ link_to "Boris Rorsvort", "http://www.rorsvort.com", :rel => "external"}
    .clear

= include_javascripts :jquery
= yield :javascripts
= include_javascripts :emuzikos
= yield :scripts

/[if (lt IE 9) & (!IEMobile)]
  = include_javascripts :ie_js_pack

= gflash(:fade_in_speed => 200, :fade_out_speed => 200, :time => 200)

=render "/shared/feedback_box"

