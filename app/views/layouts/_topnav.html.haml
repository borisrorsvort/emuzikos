.top-header.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    %ul.pull-left
      %li
        %a.btn-nav.toggle{href: "#", style: "display:none;", data: {trigger: 'close'}}
          %i.icon-cancel
        %a.btn-nav.left-nav-trigger.toggle{:href => "#left"}
          %i.icon-search
    %ul.pull-right
      %li
        %a.btn-nav.right-nav-trigger.toggle{:href => "#right"}
          %i.icon-user
          = unread_messages_count if current_user.unread_messages?
        %a.btn-nav.toggle{href: "#", style: "display:none;", data: {trigger: 'close'}}
          %i.icon-cancel
    %span.logo EMUZIKOS
