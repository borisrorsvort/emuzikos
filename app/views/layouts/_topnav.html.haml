.top-header.navbar.navbar-inverse
  .navbar-inner
    %ul.pull-left
      %li
        %a.btn-nav.toggle{href: "#", style: "display:none;", data: {trigger: 'close'}}
          %i.icon-cancel
        %a.btn-nav.left-nav-trigger.toggle{:href => "#left"}
          %i.icon-search
    %ul.pull-right
      %li
        %a.btn-nav.right-nav-trigger.toggle{:href => "#right"}
          %i.icon-list
          - if user_signed_in?
            = unread_messages_count
        %a.btn-nav.toggle{href: "#", style: "display:none;", data: {trigger: 'close'}}
          %i.icon-cancel
    = link_to 'EMUZIKOS', root_path, class: "logo"
