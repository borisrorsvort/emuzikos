= render "/layouts/head"

%body{:id => @body_id ? @body_id: controller.controller_name, :class => @body_class ? controller.action_name + " " + @body_class : controller.action_name}


  %section#header
    #logo
      = link_to (@current_user ? users_path : root_path), :title => t(:'tooltips.back_to_home') do
        = image_tag 'logo.png', :alt => "Emuzikos"
        
    #user_nav
      -if current_user
        = "Hi #{current_user.username}!" 
        = link_to t(:'menu.contact'), contact_path
        = link_to t(:'menu.testimonials'), testimonials_path
        = link_to t(:'menu.logout'), logout_path
        
      -else
        =link_to t(:'menu.testimonials'), testimonials_path
        = link_to t(:'menu.register'),new_user_path
        = link_to t(:'menu.login'),login_path
    .clear
        
  #container{:class => @current_user ? "with_sidebar" : nil}
        
    = render "/layouts/main_nav"  if @current_user

    %section#content
      - if content_for? :sub_nav
        %nav#sub_nav
          = yield :sub_nav
          
      #inner_content
        - if show_title?
          %h1= yield(:title)

        = yield
    .clear
  
  =render "/layouts/footer"
