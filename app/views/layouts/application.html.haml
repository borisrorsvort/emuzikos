!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = include_stylesheets :common, :media => 'all'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      #user_nav
        -if current_user
          = "Hi #{current_user.username}!" 
          |
          =link_to t(:'menu.profile.show'), user_url(current_user)
          |
          =link_to t(:'menu.profile.edit'), edit_user_path(current_user)
          |
          =link_to t(:'menu.all_users'), users_url
          |
          =link_to t(:'menu.logout'), logout_path
        -else
          =link_to t(:'menu.register'),new_user_path
          |
          =link_to t(:'menu.login'),login_path

      .clear

      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1= yield(:title)

      = yield
    #footer
      #donation_widget
        
  = include_javascripts :jquery, :emuzikos
  = yield(:javascripts)  