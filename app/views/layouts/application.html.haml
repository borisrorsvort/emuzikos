!!!
%html

  %head
    %title
      = yield(:title) || "Find a local musicians"
      | Emuzikos
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = include_stylesheets :common, :media => 'all'
    
    %link{:href => 'http://fonts.googleapis.com/css?family=Droid+Sans:regular,bold', :rel => 'stylesheet', :type => 'text/css'}
    
    = csrf_meta_tag
    = yield(:head)

  %body{:id => @body_id ? @body_id: controller.controller_name, :class => @body_class ? controller.action_name + " " + @body_class : controller.action_name}
    %section#flash_messages
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
    %section#header
      #user_nav
        -if current_user
          = "Hi #{current_user.username}!" 
          |
          =link_to t(:'menu.profile.show'), user_url(current_user)
          |
          =link_to t(:'menu.profile.edit'), edit_user_path(current_user)
          |
          =link_to t(:'menu.testimonials'), testimonials_path
          |
          =link_to t(:'menu.logout'), logout_path
          
        -else
          =link_to t(:'menu.register'),new_user_path
          |
          =link_to t(:'menu.login'),login_path
      .clear
          
    #container
      /= render :partial => "shared/paypal_widget"
      
      - if @current_user
        %nav#main_nav
          %ul
            %li.icon-search=link_to t(:'menu.all_users'), users_url,
              :class => current_page?(users_path) ? "current" : nil
              
            %li.icon-messages
              =link_to user_messages_path(current_user), :class => controller.controller_name == "messages" ? "current" : nil do
                =t(:'menu.inbox')
                = unread_messages_count unless  current_user.received_messages.un_read.count == 0
                
                            
            %li.icon-user=link_to t(:'menu.profile.show'), user_url(current_user),
              :class => current_page?(user_path(current_user)) ? "current" : nil
              

              

              
      %section#content{:class => @current_user ? "with_sidebar" : nil}
      
        - if show_title?
          %h1= yield(:title)

        = yield
      .clear
    #footer
      #donation_widget
      
  = include_javascripts :jquery, :emuzikos
  
  = yield(:javascripts)  