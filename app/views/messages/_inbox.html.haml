- title t(:'.title'), false

- content_for :sub_nav do
  %ul#sub_sections
    %li
      = link_to t(:'menu.messages.inbox'), user_messages_path(@user), :class => "current"
    %li
      = link_to t(:'menu.messages.sent_messages'), user_messages_path(@user, :mailbox => :sent)
  .clear

- if @messages.size == 0
  =t(:'messages.no_messages')

-else
  
  %table#messages_table.display.wide
    %tr
      %th{:class => "delete_seleted"}= t(:'messages.delete')
      %th{:class => "unread"}
        %span.unread_bullet!=unread_bullet 
      %th= t(:'messages.subject')
      %th= t(:'messages.sender')
      %th= t(:'activerecord.attributes.user.zip')
      %th= t(:'activerecord.attributes.user.country')
      %th= t(:'messages.sent_on')
      
    - for message in @messages
      %tr{:class => "#{cycle("odd", "even")} #{ !message.read? ? "unread" : nil}"}
        %td= check_box_tag "delete[]", message.id
        %td 
          - unless message.read?
            %span.unread_bullet!=unread_bullet 
        %td= link_to h(message.subject), user_message_path(@user, message)
        %td= link_to h(message.sender.username), user_path(@user)
        %td= @user.zip
        %td= I18n.t(@user.country, :scope => 'countries') rescue nil
        %td= h message.created_at.to_s(:long)
    %tr
      %td{:colspan => "5"}
        = submit_tag t(:'buttons.delete'), :class => "button delete" 