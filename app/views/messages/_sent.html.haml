-title t(:'.title')

= link_to t(:'menu.inbox'), user_messages_path(@user)
    
= link_to t(:'menu.sent_messages'), user_messages_path(@user, :mailbox => :sent)

%h2= t(:'.subtitle')



%table#messages_table
  %tr
    %th= t(:'messages.delete')
    %th= t(:'messages.subject')
    %th= t(:'messages.to')
    %th= t(:'messages.sent_on')
  - if @messages.size == 0
    %tr
      %td{:colspan => "4"}
        =t(:'messages.no_messages')
  - else
    - for message in @messages
      %tr
        %td= check_box_tag "delete[]", message.id
        %td= link_to h(message.subject), user_message_path(@user, message)
        %td= link_to h(message.recipient.username), user_path(@user)
        %td= h message.created_at.to_s(:long)
    %tr
      %td{:colspan => "4"}
        = submit_tag t(:'buttons.delete'), :class => "button delete"

