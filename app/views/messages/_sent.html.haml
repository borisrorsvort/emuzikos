%h2 Sent
%table
  %tr
    %th Del?
    %th Subject
    %th To
    %th Sent
  - if @messages.size == 0
    %tr
      %td{:colspan => "4"}
        No messages
  - else
    - for message in @messages
      %tr
        %td= check_box_tag "delete[]", message.id
        %td= link_to h(message.subject), user_message_path(@user, message)
        %td= link_to h(message.recipient.username), user_path(@user)
        %td= h message.created_at.to_s(:long)
    %tr
      %td{:colspan => "4"}
        = submit_tag "Delete"

= link_to "Inbox", user_messages_path(@user)
