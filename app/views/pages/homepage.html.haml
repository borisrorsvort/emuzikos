- title t(:'.title'), false

.halo
  .icon_and_logo
    = link_to(image_tag("backgrounds/icon-and-logo.png") ,root_path)
    
  #home_moto
    = t(:'.moto').html_safe  

  %span.signup_button
    .bl
    .br
    .signup_text
      = link_to t(:'buttons.home_signup'), new_user_registration_path

#how_it_works
  %section#steps
    .step#profile
      .flag 1
      %p= t(:'.steps.profile').html_safe
      = link_to "#profile_zoomed", :class => "app_sample", :rel => "boxy" do
        .zoom_icon
        .app_sample_image
          =image_tag('app-samples/profile-thumb.jpg')
    .step#search
      .flag 2
      %p= t(:'.steps.search').html_safe
      = link_to "#search_zoomed", :class => "app_sample", :rel => "boxy" do
        .zoom_icon
        .app_sample_image
          =image_tag('app-samples/search-thumb.jpg')
    .step#contact
      .flag 3
      %p= t(:'.steps.contact').html_safe
      = link_to "#contact_zoomed", :class => "app_sample", :rel => "boxy" do
        .zoom_icon
        .app_sample_image
          =image_tag('app-samples/contact-thumb.jpg')
        
      =image_tag('app-samples/profile.jpg', :id => "profile_zoomed", :class => "hidden", :title => t(:'.steps.profile').html_safe)
      =image_tag('app-samples/search.jpg', :id => "search_zoomed", :class => "hidden", :title => t(:'.steps.profile').html_safe)
      =image_tag('app-samples/contact.jpg', :id => "contact_zoomed", :class => "hidden", :title => t(:'.steps.profile').html_safe)
      
  %section#home_testimonials
    %header 
      %h2= t(:'.latest_testimonials')
    - if !@testimonials.blank?
      %ul
        - for testimonial in @testimonials do
          %li 
            %span.avatar.small
              - if testimonial.user.avatar.present?
                = image_tag(testimonial.user.avatar.url(:gallery))
              -else
                = image_tag("backgrounds/avatar-default.gif")
            
            %div.text
              .span.author
                = testimonial.created_at.strftime('%b %d, %Y')
                = t(:'common.by')
                = testimonial.user.username
              = testimonial.body
            
            
  .clear