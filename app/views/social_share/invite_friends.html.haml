
- title t(:'.title')
- description t(:'.meta_description')
- set_meta_tags :canonical => request.url
- headline t(:'.title')


.field.invite_friend_block
  %h2= t(:'.subtitle')
  %p
    %a{:onclick => "sendRequestViaMultiFriendSelector(); return false;", :class => "button contact"}
      =t(:'buttons.invite_your_friends_from_fb')

  .addthis_toolbox.addthis_default_style{"addthis:url" => user_url(@current_user)}
    %a.addthis_button_tweet{"tw:url" => user_url(@current_user)}
    %a.addthis_button_facebook_send{"fb:like:href" => user_url(@current_user), "fb:like:layout" => "button_count"}
    .clear
  %script{:src => "http://s7.addthis.com/js/250/addthis_widget.js#pubid=borisrorsvort", :type => "text/javascript"}

  .fb-like-box{"data-header" => "false", "data-href" => "http://www.facebook.com/emuzikos", "data-show-faces" => "true", "data-stream" => "false", "data-width" => "292"}
  .clear
  .fb-comments{"data-href" => "http://emuzikos.com", "data-num-posts" => "2", "data-width" => "300"}
  
  .clear

.field.invite_friend_block
  = image_tag('marketing/concert.jpg', :alt => "Emuzikos, share your musicians profile")

.clear

#fb-root

%script{:src => "http://connect.facebook.net/en_US/all.js"}

:javascript
  FB.init({
    appId  : '#{AppConfig.facebook.app_id}',
    cookie:false,
    status:true
  });


  function sendRequestViaMultiFriendSelector() {
    FB.ui({method: 'apprequests',
      message: '#{t(:".invite_your_friends_from_fb")}'
    });
  }

  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));