#search_form
  = form_for search, :url => users_path, :html => {:method => :get} do |f|
    .field
      = f.select :user_type_contains, user_types, :include_blank => t(:'search_terms.iam')
      .clear
    .field
      = f.select :genres_name_contains, genres.collect {|g| g.name}, :include_blank => t(:'search_terms.music_style')
      .clear
    .field
      = f.select :instruments_name_contains, instruments.collect {|i| i.name}, :include_blank => t(:'search_terms.who_plays')
      .clear
    .field
      = f.select :searching_for_contains, user_types, :include_blank => t(:'search_terms.who_search_for')
      .clear
    .field
      = f.select :country_contains, countries, :include_blank => t(:'search_terms.country')
      .clear
    .field#zip
      .centered
        = f.text_field :zip_contains, :placeholder => t(:'activerecord.attributes.user.zip'), :size => 10
      .clear
    .field
      .centered
        = f.submit(t(:'buttons.search'), :type => "submit", :class => "button submit search small")

    .clear
