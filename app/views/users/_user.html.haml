%li.mini-profile.media
  = link_to user, class: 'mini-profile--inner' do
    .mini-profile--thumb.pull-left
      - if user.avatar.present?
        = image_tag(user.avatar.url(:normal), class: "media-object")
      - else
        = image_tag("http://pipsum.com/400x600.jpg", class: "media-object")
    .mini-profile--content.media-body
      .section.user-general-infos
        .username
          %h5
            = user.username.titleize
            = " - "
            %span.muted
              = user.zip + ", "
              = i18n_country(user)

      .section.user-type
        .title
          %strong= t(:"users.types.#{user.user_type}")
          = t(:'users.show.is_looking_for')
          %strong= t(:"users.types.#{user.searching_for}")
      .section.user-properties.user-genre.clearfix
        .pull-left
          .media-object.icon-circle
            %i.icon-tag
        .media-body
          %span.tag_list
            = user.genres.collect {|i| i.translated_name}.to_sentence

      .section.user-properties.user-instruments.clearfix
        .pull-left
          .media-object.icon-circle
            %i.icon-note-beamed
        .media-body
          %span.tag_list
            = user.instruments.collect {|i| i.translated_name}.to_sentence
      - if user.references.present?
        .section.user-properties.user-musical-references.clearfix
          .pull-left
            .media-object.icon-circle
              %i.icon-heart
          .media-body
            %span.tag_list
              = user.references
    .clearfix
