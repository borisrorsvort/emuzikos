- title t(:'.title')
- description t(:'.description')
- set_meta_tags :canonical => request.url

- content_for :sub_nav do
  %ul.nav.nav-tabs
    %li= link_to t(:'menu.messages.inbox'), user_messages_path(current_user), :class => "current"
    %li= link_to t(:'menu.messages.sent_messages'), user_messages_path(current_user, :mailbox => :sent)
    %li.active= link_to t(:'menu.users.contacts'), user_contacts_path(current_user)


-if !@friendships.blank?
  %table.table.table-bordered
    / %thead
    /   %tr
    /     %th ...
    /     %th ...
    %tbody
      = render :partial => "friendship", :collection => @friendships, :current_user => @current_user

-else
  .no_records
    =t(:'.no_users')
