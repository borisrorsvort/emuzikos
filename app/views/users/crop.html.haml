- title "Crop avatar"
- content_for(:head) do
  = stylesheet_link_tag "jquery.Jcrop"
- content_for(:javascripts) do
  = javascript_include_tag "jquery.Jcrop.min"
  %script{:charset => "utf-8", :type => "text/javascript"}
    $(function() {
    $('#cropbox').Jcrop({
    onChange: update_crop,
    onSelect: update_crop,
    setSelect: [0, 0, 500, 500],
    aspectRatio: 1
    });
    });
    
    function update_crop(coords) {
    var rx = 100/coords.w;
    var ry = 100/coords.h;
    $('#preview').css({
    width: Math.round(rx * <haml:loud> @user.avatar_geometry(:normal).width </haml:loud>) + 'px',
    height: Math.round(ry * <haml:loud> @user.avatar_geometry(:normal).height </haml:loud>) + 'px',
    marginLeft: '-' + Math.round(rx * coords.x) + 'px',
    marginTop: '-' + Math.round(ry * coords.y) + 'px'
    });
    var ratio = <haml:loud> @user.avatar_geometry(:original).width </haml:loud> / <haml:loud> @user.avatar_geometry(:normal).width </haml:loud>;
    $("#crop_x").val(Math.round(coords.x * ratio));
    $("#crop_y").val(Math.round(coords.y * ratio));
    $("#crop_w").val(Math.round(coords.w * ratio));
    $("#crop_h").val(Math.round(coords.h * ratio));
    }
= image_tag @user.avatar.url(:normal), :id => "cropbox"
%h4 Preview:
%div{:style => "width:100px; height:100px; overflow:hidden"}
  = image_tag @user.avatar.url(:normal), :id => "preview"
- form_for @user do |f|
  - for attribute in [:crop_x, :crop_y, :crop_w, :crop_h]
    = f.hidden_field attribute, :id => attribute
  %p= f.submit "Crop"
