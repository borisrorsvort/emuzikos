- title t(:'.title', :username => @user.username)
- description t(:'.meta_description', :username => @user.username)
- set_meta_tags :canonical => request.url
- headline t(:'.title', :username => @user.username)

- if @user == current_user
  - content_for :sub_nav do
    %ul#sub_sections
      %li
        = link_to t(:'menu.profile.edit'), edit_user_path(current_user), :class => "current"
      %li
        = link_to t(:'menu.profile.public'),  user_path(current_user)
      %li
        = link_to t(:'menu.profile.account'), edit_user_registration_path(current_user)
      %li
        = link_to t(:'menu.profile.authentications'), services_path

    .clear


- if current_user.profile_completed?
  - if current_user.visible?
    .alert.alert-success
      = t(:'.profile_complete_notice') + " " + t(:'.visible_notice')
  - else
    .alert.alert-info
      = t(:'.profile_complete_notice') + " " + t(:'.invisible_notice')
- else
  .alert.alert
    = t(:'.profile_not_complete_notice')

= render 'form'

