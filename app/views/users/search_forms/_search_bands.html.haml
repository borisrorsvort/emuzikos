= form_for @search, :url => users_path, :html => {:method => :get, id: "search-form-bands", class: "search-form-users", data: {push: true}} do |f|
  .searchbar-field.hidden= f.text_field :user_type, :value => "band", class: 'no-chosen'
  .searchbar-field.hidden= f.select :instruments_like, "", {}, :id => "search_band_instruments_name", class: 'no-chosen'
  .searchbar-field= f.select :genres_like, genres.map{|g| [ g.translated_name, g.name ]}, {:include_blank => t(:'search_terms.music_style')}, :id => "search_band_genre"
  .searchbar-field= f.select :searching_for, grouped_options_for_select(searching_for_grouped_options, (params[:search][:searching_for] rescue "")), {:include_blank => t(:'search_terms.who_search_for')}, :id => "search_band_searching_for"
  .searchbar-field= text_field_tag :location, "", :placeholder => t(:'search_terms.mass_locate')
  .searchbar-field= f.submit(t(:'buttons.search.bands'),:name => nil, :class => "btn btn-primary")
