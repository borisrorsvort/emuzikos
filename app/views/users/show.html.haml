- title t(:'.title', :username => @user.username), false

-if current_user
  - content_for :sub_nav do
    - if @user == current_user
      %ul#sub_sections
        %li
          = link_to t(:'menu.profile.edit'), edit_user_path(current_user)
        %li
          = link_to t(:'menu.profile.public'),  user_path(current_user), :class => "current"
        %li
          = link_to t(:'menu.profile.account'), edit_user_registration_path(current_user)
        %li 
          = link_to t(:'menu.profile.authentications'), services_path
      .clear  
      
    - else
      %ul#sub_sections
        %li
          = link_to t(:'buttons.back', :model => t(:'activerecord.models.search')), :back, :class => "button back"
        -if @current_user && @current_user != @user
          %li= link_to t(:'buttons.contact'), new_user_message_path(@current_user, :to => @user.id), :class => "button submit contact"
        -elsif !@current_user
          %li= link_to t(:'buttons.home_signup'), signup_path, :class => "button submit contact "
    .clear
  


%section.left_drawer
  - if @user.avatar
    = image_tag @user.avatar.url(:medium), :class => "profile_picture" 
  - else
    = image_tag "backgrounds/avatar-default-profile.gif", :class => "profile_picture"
%section.right_drawer
  %header 
    %h1.username= t(:'.title', :username => @user.username)
    
    - unless @user.user_type.blank? || @user.country.blank? || @user.zip.blank?
      %span.location_infos
        =t(:"users.types.#{@user.user_type}")
        =t(:'.from')
        = @user.zip
        = Carmen::country_name(@user.country) rescue "N/A"

  - unless @user.user_type.blank? || @user.country.blank? || @user.zip.blank?
    %p.looking_for
      = t(:'.is_looking_for')
      = t(:"users.types.#{@user.searching_for}")
      = t(:'.to_play')
      = t(:"musical_genres.#{@user.genre}")
      = t(:'.music')

  - unless @user.instruments.blank?
    %h3= t(:'activerecord.attributes.user.instruments')
    .instruments_tag_list
      =# @user.instruments.collect{|instrument| t(:"instruments.#{instrument}")}.join(', ')
      - @user.instruments.each do |instrument|
        %span= t(:"instruments.#{instrument}")

  - unless @user.references.blank?   
    %h3= t(:'activerecord.attributes.user.references')
    %p= @user.references

  - unless @user.request_message.blank?
    %h3= t(:'activerecord.attributes.user.request_message')
    = simple_format(@user.request_message)
  
  - if @user.geocoded?
    %h3= t(:'activerecord.attributes.user.location')
    = gmaps("map_options" => {"center_latitude" => @user.latitude, "center_longitude" => @user.longitude, "zoom" => 11},"markers" => { "data" => @user_map })
    .clear
  / -if @users_nearby
  /     - for user in @users_nearby.nearbys(10)
  /       = link_to user.username, user_path(user) 
  /       (#{user.distance.round(2)} miles)
  
  
.clear


